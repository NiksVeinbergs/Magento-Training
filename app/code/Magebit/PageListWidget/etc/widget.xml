<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:Magebit:PageListWidget:etc/widget.xsd">
    <widget class="Magebit\PageListWidget\Block\Widget\PageList" id="page_list_widget">
        <label>CMS Page List</label>
        <description>Display either all or selected CMS pages in a list</description>
        <parameters>
            <parameter name="title" xsi:type="text" visible="true" sort_order="10">
                <label translate="true">Title</label>
            </parameter>

            <parameter name="display_mode" xsi:type="select" visible="true" required="true" sort_order="20">
                <label translate="true">Display Mode</label>
                <options>
                    <option name="all_pages" value="1" selected="true">
                        <label>All Pages</label>
                    </option>
                    <option name="specific_pages" value="2">
                        <label>Specific Pages</label>
                    </option>
                </options>
            </parameter>

            <parameter name="pages" xsi:type="multiselect" visible="true" required="true" sort_order="20" source_model="Magento\Cms\Model\Config\Source\Page">
                <label translate="true">Selected Pages</label>
                <depends>
                    <parameter name="display_mode" value="2"></parameter>
                </depends>
            </parameter>
        </parameters>
    </widget>
</widgets>
